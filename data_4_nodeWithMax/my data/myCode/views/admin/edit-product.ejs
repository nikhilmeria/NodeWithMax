<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form"
            action="/admin/<% if(edit === 'true') { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title= <%=edit%></label>
                <input type="text" name="title" id="title" value="<%if (edit === 'true') { %><%=product.title%><%}%>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%if (edit === 'true') { %><%=product.imageUrl%><%}%>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%if (edit === 'true') { %><%=product.price%><%}%>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%if (edit === 'true') { %><%=product.description%><%}%></textarea>
            </div>
            <%if (edit === 'true') {%><input type=" hidden" name="productId" value="<%=product.id%>">
                <%}%>
            <button class="btn" type="submit"><% if(edit === 'true'){ %>Edit Product <% } else { %> Add Product
                <% } %></button>
        </form>
    </main> <%- include('../includes/end.ejs') %>